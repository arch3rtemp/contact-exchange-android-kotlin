<resources>
    <!-- Base application theme. -->
    <style name="Theme.ContactsExchange" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/darkish_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/aqua_marine</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/black_two</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_primary</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="titleTextColor">@color/text_primary </item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
